{
  "version": 2,

  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    }
  ],

  "routes": [
    {
      "src": "^/favicon\\.png$",
      "dest": "/favicon.png"
    },

    {
      "src": "/api/restaurants",
      "dest": "api/restaurants/index.ts"
    },
    {
      "src": "/api/login",
      "dest": "api/login.ts"
    },
    {
      "src": "/api/admin/restaurants",
      "dest": "api/admin/restaurants/index.ts"
    },
    {
      "src": "/api/admin/restaurants/(?<id>[^/]*)",
      "dest": "api/admin/restaurants/[id].ts?id=$id"
    },
    {
      "src": "/api/admin/menu-items",
      "dest": "api/admin/menu-items/index.ts"
    },
    {
      "src": "/api/admin/menu-items/(?<id>[^/]*)",
      "dest": "api/admin/menu-items/[id].ts?id=$id"
    },
    {
      "src": "/api/(.*)",
      "dest": "api/index.ts"
    },

    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },

    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
